extends ../layout

block body

	div.row
		div.span9
			div.well 
				button.btn.btn-success.break-right.buttonLoadGrid(data-id=grid.id) Refresh Grid 
				button.btn.btn-success.break-right.buttonClearTerrain(data-id=grid.id) Clear Terrain 
				button.btn.btn-success.break-right.buttonShowTerrain(data-id=grid.id) Show Terrain 

				div.grid.break-top

		div.span3
			div.well
				div#cellDump
			div.well
				div#cellUpdate
	div.row
		span.span6
			div.well
				form.form-horizontal
					.control-group

						label.control-label(for='inputName') Name
						.controls
							input#inputName(name='name',type='text',value=grid.name)

					.control-group
						label.control-label(for='inputWidth') Width
						.controls
							input.span1#inputWidth(name='width',type='text',value=grid.width)
					
					.control-group
						label.control-label(for='inputHeight') Height
						.controls
							input.span1#inputHeight(name='height',type='text',value=grid.height)			

					.control-group
						label.control-label(for='inputBackground') Background
						.controls
							input#inputBackground(name='background',type='text',value=grid.background)

					.control-group
						label.control-label(for='DefaultTerrain') Default Terrain
						.controls
							select#inputDefaultTerrain(name='defaultTerrain',disabled='true')
								each type in grid.terrainTypes()
									option(value=type,selected=grid.defaultTerrain==type) #{type}
					
					.control-group
						.controls
							label.checkbox
								input(name='active',type='checkbox',checked=grid.active)
								| Active

				div.form-actions
					button.btn.btn-success(type='call',data-call='admin-grid',data-id=grid.id) Update Grid
		

block prejs
	script(src="/js/grid.js")

block css
	link(href="/css/grid.css", rel="stylesheet")

